<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="screensaver.picturegrid"
    name="Screensaver Picture Grid"
    version="1.0.6"
    provider-name="toccata10">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.exifread" version="2.1.2+matrix.0" />
  </requires>
  <extension point="xbmc.ui.screensaver" library="default.py" />
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en_GB">A screensaver that displays a grid of pictures. Grids can be 3x3, 2x2 or 1x1</summary>
    <description lang="en_GB">A screensaver that displays a grid of pictures. Grids can be 3x3, 2x2 or 1x1</description>
    <website></website>
    <email></email>
    <assets>
        <icon>resources/icon.png</icon>
        <screenshot>resources/screenshot-01.jpg</screenshot>
        <screenshot>resources/screenshot-02.jpg</screenshot>
        <screenshot>resources/screenshot-03.jpg</screenshot>
    </assets>
    <news>Exif orientation support</news>
    <source>https://github.com/toccata10/kodi-screensaver-picturegrid</source>
  </extension>
</addon>
